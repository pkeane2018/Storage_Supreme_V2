<div class="container">
  <div class="row data-row-lg">
    <div class="col-md-12">
      <br />
      <h2>Status Review</h2>
      <br />
      <button id="homeButtonReview" type="button" class="btn btn-secondary">Home</button>
      <br />
      <br />
    </div>
  </div>

  <div class="row data-row">
    <div class="col-md-12">
      <br />
      <div class="container">
        <h3>All Requests</h3>
        <br/>
          <div class="row">
            <div class="col-md-1 col-title">
              Request Number
            </div>
            <div class="col-md-1 col-title">
              Date Submitted
            </div>
            <div class="col-md-1 col-title">
              Project Name
            </div>
            <div class="col-md-1 col-title">
              Requestor
            </div>
            <div class="col-md-1 col-title">
              Buyer
            </div>
            <div class="col-md-1 col-title">
              Need-by Date
            </div>
            <div class="col-md-1 col-title">
              Material Description
            </div>
            <div class="col-md-1 col-title">
              Quantity
            </div>
            <div class="col-md-1 col-title">
              Status
            </div>
            <div class="col-md-1 col-title">
              Date Ordered
            </div>
            <div class="col-md-1 col-title">
              Confirmed Delivery Date
            </div>
            <div class="col-md-1 col-title">
              Delivery Status
            </div>
          </div>
      </div>

      <div class="container">
        {{#each orders}}
        <form id="form1">
          <div class="form-group row">
            <div class="col-md-1">
              <input type="text" name="request-number" value={{id}}>
            </div>
            <div class="col-md-1">
              <input type="text" name="dateSubmitted" value={{dateSubmitted}}>
            </div>
            <div class="col-md-1">
              <input type="text" name="projectName" value={{projectName}}>
            </div>
            <div class="col-md-1">
              <input type="text" name="requestorname" value={{requestorname}}>
            </div>
            <div class="col-md-1">
              <input type="text" name="assigned-buyer" value={{buyer}}>
            </div>
            <div class="col-md-1">
              <input type="text" name="needByDate" value={{needByDate}}>
            </div>
            <div class="col-md-1">
              <input type="text" name="materialDescription" value={{materialDescription}}>
            </div>
            <div class="col-md-1">
              <input type="text" name="quantity" value={{quantity}}>
            </div>
            <div class="col-md-1">
              <input type="text" name="status" value={{status}}>
            </div>
            <div class="col-md-1">
              <input type="text" name="dateOrdered" value={{dateOrdered}}>
            </div>
            <div class="col-md-1">
              <input type="text" name="confirmedDeliveryDate" value={{confirmedDeliveryDate}}>
            </div>
            <div class="col-md-1">
              <input type="text" name="deliveryStatus" value={{deliveryStatus}}>
            </div>
          </div>
        </form>
        {{/each}}
      </div>
      <br />
      <br />
      <br />
      <br />
    </div>
  </div>
</div>


<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

<script src="../../public/js/all.js"></script>

<script>
  $("#homeButtonReview").click(function(event) {
   
    event.preventDefault();

    window.location.href="/";
  });
</script>